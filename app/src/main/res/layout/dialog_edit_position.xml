<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:padding="16dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    android:backgroundTint="@android:color/white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="8dp">

        <!-- Top Right Close Button (X) -->
        <ImageButton
            android:id="@+id/btnClose"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="end"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Close"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tvEditNamePrompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter new name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/editPositionName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="New Position Name"
            android:textSize="16sp"
            android:inputType="text"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="#000000"
            android:textColorHint="#B0B0B0"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#E0E0E0"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <!-- Cancel Button (replacing Delete) -->


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSaveName"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Save"
                android:textColor="@android:color/white"
                app:cornerRadius="20dp"
                app:backgroundTint="@color/button_edit"
                android:textSize="16sp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp" />

        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
